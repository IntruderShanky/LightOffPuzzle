<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.intrusoft.lightsonpuzzle">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />

        <activity android:name=".MainActivity" />
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HowToPlay"
            android:label="How to Play"/>
        <activity
            android:name=".LevelActivity"
            android:label="Select Level" />
        <activity
            android:name=".ScoreBoard"
            android:label="Score Board" />
        <activity
            android:name=".GlobalActivity"
            android:label="Global Board" />
        <activity android:name=".AboutActivity"
            android:label="About Developer"></activity>
    </application>

</manifest>
